<restaurants>
    <restaurant>
        <coordonnees>
            <nom>Le petit resto</nom>
            <adresse>12 rue des fleurs</adresse>
            <restaurateur>Mr Dupont</restaurateur>
        </coordonnees>
        <descriptionRestaurant>
            <p>Le petit resto est un restaurant familial</p>
            <img url="http://www.lepetitresto.com/logo.jpg" placement="center"/>
        </descriptionRestaurant>
        <carte>
            <plat identifiant="plat_1" partie="entree">
                <prix montant="5000" devise="XOF"/>
                <descriptionPlat>Salade de tomates</descriptionPlat>
            </plat>
            <plat identifiant="plat_2" partie="entree">
                <prix montant="6000" devise="XOF"/>
                <descriptionPlat>Salade de carottes</descriptionPlat>
            </plat>
            <plat identifiant="plat_3" partie="plat">
                <prix montant="10000" devise="XOF"/>
                <descriptionPlat>Poulet roti</descriptionPlat>
            </plat>
            <plat identifiant="plat_4" partie="plat">
                <prix montant="12000" devise="XOF"/>
                <descriptionPlat>Boeuf bourguignon</descriptionPlat>
            </plat>
            <plat identifiant="plat_5" partie="dessert">
                <prix montant="3000" devise="XOF"/>
                <descriptionPlat>Salade de fruits</descriptionPlat>
            </plat>
        </carte>
        <menus>
            <menu>
                <titre>Menu du jour</titre>
                <description>Menu complet</description>
                <elements>
                    <elementMenu idref="plat_1"/>
                    <elementMenu idref="plat_3"/>
                    <elementMenu idref="plat_5"/>
                </elements>
            </menu>
            <menu>
                <titre>Menu enfant</titre>
                <description>Menu pour les enfants</description>
                <elements>
                    <elementMenu idref="plat_1"/>
                    <elementMenu idref="plat_5"/>
                </elements>
            </menu>
        </menus>
    </restaurant>
</restaurants>